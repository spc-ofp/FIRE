<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    @RenderSection("HeadScripts", false)
    <link rel="alternate" type="application/rss+xml" title="Latest Trips" href="@Url.Action("Rss", "Trip")" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/fuelux.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/fuelux-responsive.min.css")" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/jquery")
    @*<script src="http://fuelcdn.com/fuelux/2.3/loader.min.js"></script>*@
    <script src="~/Scripts/loader.js"></script>
    <style>
        body
        {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">TUFCES WEB</a>
          <div class="nav-collapse">
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    @{
        bool hasSidebar = IsSectionDefined("Sidebar");
        string containerClass = "container";
        if (hasSidebar)
        {
            containerClass = "container-fluid";
        }      
    }

    <div class="wrapper">
        <div class="@containerClass">
        @if (hasSidebar)
        {
            <div class="span2">@RenderSection("Sidebar")</div>
            <div class="span10">@RenderBody()</div>
        }
        else
        {
            @RenderBody()
        }          
        </div> 
    </div>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->   
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("BottomScripts", false)
</body>
</html>