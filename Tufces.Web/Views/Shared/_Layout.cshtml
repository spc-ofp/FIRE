<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    @RenderSection("HeadScripts", false)
    <link rel="alternate" type="application/rss+xml" title="Latest Trips" href="@Url.Action("Rss", "Trip")" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    
    <style>
        body
        {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    

    @Scripts.Render("~/bundles/jquery")
    <!-- Use Modernizr instead of html5shim / html5shiv, at least until it breaks -->
    @*<script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>*@

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />

</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">TUFCES WEB</a>
          <div class="nav-collapse">
            <!-- Conditionally replace Bootstrap static nav with RenderSection(...) -->
            @*@if (IsSectionDefined("NavBar"))
            {
                @RenderSection("NavBar")
            }
            else
            {
                <ul class="nav pull-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Bundle<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Browse","Index","Bundle")</li>
                            <li>@Html.ActionLink("Enter New Bundle","Create","Bundle")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Logsheet<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Browse","Index","Logsheet")</li>
                            <li>@Html.ActionLink("Priority", "#")</li>
                        </ul>
                    </li> 
                </ul>
                <ul class="nav pull-right">
                    <li><a href="#">Welcome @User.Identity.Name</a></li>  
                </ul>
            }*@
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    @{
        bool hasSidebar = IsSectionDefined("Sidebar");
        string containerClass = "container";
        if (hasSidebar)
        {
            containerClass = "container-fluid";
        }      
    }

    <div class="wrapper">
        <div class="@containerClass">
        @if (hasSidebar)
        {
            <div class="span2">@RenderSection("Sidebar")</div>
            <div class="span10">@RenderBody()</div>
        }
        else
        {
            @RenderBody()
        }          
        </div> 
    </div>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->   
    
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @*<script src="@Url.Content("~/Scripts/bootstrSourcesap.min.js")" type="text/javascript"></script>*@

    @RenderSection("BottomScripts", false)
</body>
</html>